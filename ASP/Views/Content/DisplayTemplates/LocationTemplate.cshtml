@model ASP.Data.Entities.Location

<div class="col">
	<div class="card h-100" style="width: 18rem; border: 0;">
		<a asp-action="Location" asp-route-id="@(Model.Slug)">
			<img src="~/img/content/@(Model.PhotoUrl ?? "no-image.jpg")" class="card-img-top" style="border-radius: 20px; width: 300px; height: 300px; object-fit: cover;" alt="...">
			<div class="card-body">
				<h5 class="card-title">@Model.Name</h5>
				<p class="card-text">@Model.Description</p>
			</div>
		</a>
	</div>
</div>
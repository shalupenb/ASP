@model ASP.Data.Entities.Room

<div class="col">
	<div class="card h-100" style="width: 18rem; border: 0;">
		<a asp-action="Room" asp-route-id="@(Model.Slug)">
			<img src="~/img/content/@(Model.PhotoUrl ?? "no-image.jpg")" class="card-img-top" style="border-radius: 20px; width: 300px; height: 300px; object-fit: cover;" alt="...">
			<div class="card-body">
				<h5 class="card-title">@Model.Name</h5>
				<p class="card-text">@Model.Description</p>
				<b class="float-end">₴ @(Model.DailyPrice.ToString("F2"))</b>
			</div>
		</a>
	</div>
</div>